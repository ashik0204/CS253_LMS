{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CS253 Library System Build",
            "type": "cppbuild",
            "command": "E:\\cfold\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I", "${workspaceFolder}/include",
                "-I", "${workspaceFolder}",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/lms.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Building CS253 Library Management System"
        }
    ]
}
